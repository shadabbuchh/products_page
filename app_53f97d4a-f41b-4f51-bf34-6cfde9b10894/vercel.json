{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm install && cd backend && pnpm build && cd ../frontend && pnpm build",
  "outputDirectory": "frontend/dist",
  "installCommand": "pnpm install",
  "functions": {
    "api/index.mjs": {
      "maxDuration": 30,
      "includeFiles": "backend/dist/**,shared/openapi_spec_*.yaml,backend/src/db/migrations/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
